package com.pratmodi.one;

import java.util.Scanner;

public class Solution4 {

	public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        int t=in.nextInt();
        int a = in.nextInt();
        int b = in.nextInt();
        int n = in.nextInt();
        printFormula(a, b, n, t);
        in.close();
    }
	
	public static void printFormula(int a, int b, int n, int t) {
		for(int i=0;i<t;i++){
            int progression = (a+(2^n-1)*b);
        }	
	}
	
}
